#macro(renderAlertMessage $message)
<div id="alert-div" class="alert alert-message-container closed">
    <div class="alert-item item-1">
        <i class="fa fa-sign-out icon"></i>
    </div>
    <div id="alert-msg" class="alert-item item-2">$message</div>
    <div class="alert-item item-3">
        <button id="close-btn" type="button" class="close">&times;</button>
    </div>
</div>

<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function (event) {
    (function () {
        var message = "${message}";
        if (message) {
            alert.init(message);
        }
    })();
});
</script>
#end